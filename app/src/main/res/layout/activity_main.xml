<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructure.MainActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        style="@style/default_layout_dimen"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/first_row"
            style="@style/default_layout_dimen">

            <ImageView
                android:id="@+id/first_album_image"
                android:src="@drawable/first_album"
                style="@style/album_image"/>

            <TextView
                android:text="@string/first_album_title"
                style="@style/album_title_one" />

            <ImageView
                android:id="@+id/first_arrow_right"
                android:src="@drawable/arrow_right"
                style="@style/arrow_right" />

            <View
                style="@style/separating_line_one"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/second_album_image"
                android:src="@drawable/second_album"
                style="@style/album_image"/>

            <TextView
                android:text="@string/second_album_title"
                style="@style/album_title_two" />

            <ImageView
                android:id="@+id/second_arrow_right"
                android:src="@drawable/arrow_right"
                style="@style/arrow_right"/>

            <View
                style="@style/separating_line_two"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/third_album_image"
                android:src="@drawable/third_album"
                style="@style/album_image"/>

            <TextView
                android:text="@string/third_album_title"
                style="@style/album_title_three"/>

            <ImageView
                android:id="@+id/third_arrow_right"
                android:src="@drawable/arrow_right"
                style="@style/arrow_right"/>

            <View
                style="@style/separating_line_three"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fourth_album_image"
                android:src="@drawable/fourth_album"
                style="@style/album_image"/>

            <TextView
                android:text="@string/fourth_album_title"
                style="@style/album_title_four"/>

            <ImageView
                android:id="@+id/fourth_arrow_right"
                android:src="@drawable/arrow_right"
                style="@style/arrow_right"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
