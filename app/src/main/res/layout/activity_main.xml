<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.musicalstructure.MainActivity"
    android:background="@drawable/gradient_background"
    style="@style/default_layout_dimen">

    <LinearLayout
        style="@style/default_layout_dimen"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/first_row"
            style="@style/default_layout_dimen">

            <ImageView
                android:id="@+id/first_album_image"
                android:src="@drawable/first_album"
                style="@style/album_image"/>

            <TextView
                android:text="The Unraveling"
                style="@style/album_title_one" />

            <ImageView
                android:id="@+id/first_arrow_right"
                android:src="@drawable/arrow_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/first_album_image"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/second_album_image"
                android:src="@drawable/second_album"
                style="@style/album_image"/>

            <TextView
                android:text="Revolutions per\nMinute"
                style="@style/album_title_two" />

            <ImageView
                android:id="@+id/second_arrow_right"
                android:src="@drawable/arrow_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/second_album_image"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/third_album_image"
                android:src="@drawable/third_album"
                style="@style/album_image"/>

            <TextView
                android:text="Siren Song Of The\nCounter-Culture"
                style="@style/album_title_three"/>

            <ImageView
                android:id="@+id/third_arrow_right"
                android:src="@drawable/arrow_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/third_album_image"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fourth_album_image"
                android:src="@drawable/fourth_album"
                style="@style/album_image"/>

            <TextView
                android:text="The Sufferer and\nThe Witness"
                style="@style/album_title_four"/>

            <ImageView
                android:id="@+id/fourth_arrow_right"
                android:src="@drawable/arrow_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
