<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/custom_grey</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- activity_main -->
    <style name="default_layout_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="album_image">
        <item name="android:layout_width">@dimen/main_album_image_size</item>
        <item name="android:layout_height">@dimen/main_album_image_size</item>
        <item name="android:layout_margin">@dimen/ten</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="album_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/main_album_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="album_title_one" parent="album_title">
        <item name="android:layout_toEndOf">@id/first_album_image</item>
    </style>

    <style name="album_title_two" parent="album_title">
        <item name="android:layout_toEndOf">@id/second_album_image</item>
    </style>

    <style name="album_title_three" parent="album_title">
        <item name="android:layout_toEndOf">@id/third_album_image</item>
    </style>

    <style name="album_title_four" parent="album_title">
        <item name="android:layout_toEndOf">@id/fourth_album_image</item>
    </style>

    <style name="arrow_right">
        <item name="android:layout_height">@dimen/main_arrow_right_size</item>
        <item name="android:layout_width">@dimen/main_arrow_right_size</item>
        <item name="android:layout_margin">@dimen/ten</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="separating_line">
        <item name="android:layout_height">@dimen/main_separating_line_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/ten</item>
        <item name="android:paddingBottom">@dimen/ten</item>
        <item name="android:layout_marginStart">@dimen/fifteen</item>
        <item name="android:layout_marginEnd">@dimen/fifteen</item>
    </style>
    
    <style name="separating_line_one" parent="separating_line">
        <item name="android:layout_below">@id/first_album_image</item>
    </style>
    
    <style name="separating_line_two" parent="separating_line">
        <item name="android:layout_below">@id/second_album_image</item>
    </style>

    <style name="separating_line_three" parent="separating_line">
        <item name="android:layout_below">@id/third_album_image</item>
    </style>

    <!-- grid_item -->
    <style name="grid_item_layout">
        <item name="android:layout_height">@dimen/grid_item_layout_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/grid_item_layout_padding</item>
    </style>

    <style name="grid_item_image_size">
        <item name="android:layout_height">@dimen/grid_item_image_size</item>
        <item name="android:layout_width">@dimen/grid_item_image_size</item>
    </style>

    <style name="grid_item_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/grid_item_text_size</item>
    </style>

    <!-- activity_song_list -->
    <style name="song_list_grid_view">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:columnWidth">@dimen/grid_view_column_width</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- player_item -->
    <style name="player_item_image">
        <item name="android:layout_height">@dimen/player_item_image_size</item>
        <item name="android:layout_width">@dimen/player_item_image_size</item>
        <item name="android:layout_marginTop">@dimen/player_item_image_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="player_item_song_name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/player_item_song_margin</item>
        <item name="android:textSize">@dimen/player_item_song_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@id/album_image</item>
    </style>

    <style name="player_item_buttons_box">
        <item name="android:layout_height">@dimen/player_item_box_buttons_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="player_item_single_button_box">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="player_item_image_buttons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/ten</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
